<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:article="http://schemas.android.com/article"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="?android:attr/selectableItemBackground"
    android:orientation="vertical"
    android:paddingStart="@dimen/common_padding_start_end"
    android:paddingTop="@dimen/common_padding_top_bottom"
    android:paddingEnd="@dimen/common_padding_start_end"
    android:paddingBottom="@dimen/common_padding_top_bottom">

    <TextView
        android:id="@+id/titleText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="15sp"
        article:text="开发相关" />

    <com.donkingliang.labels.LabelsView
        android:id="@+id/labelsView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/padding_symmetric_vertical"
        app:labelTextColor="@color/common_text_color_detail"
        app:labelTextSize="13sp"
        app:lineMargin="8dp"
        app:wordMargin="10dp" />

</LinearLayout>