<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/refresh_container"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/bg_window">

    <RelativeLayout
        android:id="@+id/refreshing_label"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:gravity="center"
        android:visibility="visible">

        <ProgressBar
            android:id="@+id/refresh_progress_bar"
            style="?android:progressBarStyle"
            android:layout_width="44dp"
            android:layout_height="44dp" />

        <TextView
            android:id="@+id/refresh_text_view"
            android:layout_width="wrap_content"
            android:layout_height="44dp"
            android:layout_marginLeft="8dp"
            android:layout_marginRight="8dp"
            android:layout_toRightOf="@id/refresh_progress_bar"
            android:gravity="center_vertical"
            android:text="@string/text_loading" />

    </RelativeLayout>

    <LinearLayout
        android:id="@+id/hint_container"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center"
        android:orientation="vertical"
        android:visibility="gone">

        <ImageView
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:src="@drawable/refresh_label" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="16dp"
            android:gravity="center"
            android:text="@string/text_hint_refresh"
            android:textColor="@color/hint_text_color"
            android:textSize="15sp" />

        <Button
            android:id="@+id/refresh_button"
            android:layout_width="240dp"
            android:layout_height="40dp"
            android:layout_gravity="center"
            android:background="@drawable/bg_refresh_button"
            android:text="@string/retry"
            android:textColor="@android:color/white"
            android:textSize="14sp" />
    </LinearLayout>
</FrameLayout>